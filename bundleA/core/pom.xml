		<groupId>com.bundleA</groupId>
		<artifactId>platform</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>bundleA.platform.core</artifactId>
	<packaging>bundle</packaging>
	<name>bundleA Platform CMS Core Package</name>
	<description>Core bundle for bundleA Platform</description>

	<!-- Development Build and Plugins -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-scr-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Include-Resource>{maven-resources}</Include-Resource>
						<Sling-Model-Packages>
							com.bundleA.models
						</Sling-Model-Packages>
						
						  <!-- Export-Package>com.bundleA.services</Export-Package-->
						
					</instructions>
				</configuration>
			</plugin>
			    
 
		</plugins>
	</build>
	<profiles>
		<!-- Development profile: install only the bundle -->
		<profile>
			<id>autoInstallBundle</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.sling</groupId>
						<artifactId>maven-sling-plugin</artifactId>
						<configuration>
							<!-- Note that this requires /apps/hal/platform/install to exist!! -->
							<!-- This is typically the case when ui is deployed first -->
							<!-- Otherwise, create /apps/hal/platform/install manually (CRXDE|Lite) -->
							<slingUrlSuffix>/apps/hal/platform/install/</slingUrlSuffix>
							<failOnError>true</failOnError>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
